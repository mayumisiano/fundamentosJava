package lacosCondicionais;

import java.util.Scanner;

public class exercicio2 {

	public static void main(String[] args) {		
		
		String nome,estadoCivil,sexo;		
		int tempoCasada;
		
		Scanner ler = new Scanner(System.in);
		
		System.out.println("\nInsira o nome: ");
		nome = ler.nextLine();		
		
		System.out.println("\nInsira o estado civil: ");
		estadoCivil = ler.nextLine();
		
		System.out.println("\nInsira o sexo: ");
		sexo = ler.nextLine();		
		
		/*Repare que, no IF abaixo, utilizaremos dois ==
		para fazer uma comparação de valores e verificar se as
		duas condições são verdadeiras.*/
		
		if( (sexo == "F") && (estadoCivil == "Casada")) {
			System.out.println("Insira o seu tempo de casada(o): ");
			tempoCasada = ler.nextInt();			
		}
	}

}
