package fundamentosLogica;

import java.util.Scanner;

public class Temperatura {

	public static void main(String[] args) {
		/*Receber uma temperatura em ºC e converter em
		Kelvin, Réaumur, Rankine e Fahrenheit*/
		
		double celsius;
		double rankine;
		double reaumur;
		double kelvin;
		double F;
		
		Scanner sc = new Scanner(System.in);
				
		System.out.println("Insira a temperatur em ºC: ");
		celsius= sc.nextDouble();
		
		F = (celsius * 1.8) + 32;
		kelvin = celsius + 273.15;
		reaumur = celsius * 0.8;
		rankine = celsius  * 1.8 + 32 + 459.67;
		
		System.out.println("A temperatura em Fahrehnheit é: "+F);
		System.out.printf("A temperatura em Kelvin é:"+kelvin);
		System.out.printf("A tempertura em Reaumur é: "+reaumur);
		System.out.printf("A temperatura em Rankine é: "+rankine);
		
	}

}
