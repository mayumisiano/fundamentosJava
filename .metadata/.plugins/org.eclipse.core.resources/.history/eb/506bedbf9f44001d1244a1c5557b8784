package lacosCondicionais;

import java.util.Scanner;

public class atividade11 {

	public static void main(String[] args) {
		double valorProduto = 0, desconto;
		int op = 0;
		
		Scanner leia = new Scanner(System.in);
		System.out.println("\t Menu de Códigos de Pagamento");
		System.out.println("\n1- À vista em dinheiro ou cheque");
		System.out.println("\n2- À vista no cartão de crédito");
		System.out.println("\n3- Em duas vezes, preço normal de etiqueta sem juros");
		System.out.println("Em duas vezes, preço normal de etiqueta mais juros de 10%");
		System.out.println("Digite o Código da Condição de pagamento: ");
		op = leia.nextInt(op);
		
		switch(op) {
		case 1:
			desconto = 0.1 * valorProduto;
			valorProduto = valorProduto - desconto;
		break;
		case 2:
			desconto = 0.15 * valorProduto;
			valorProduto = valorProduto - desconto;
		break;
		case 3:
			valorProduto = valorProduto/2;
		break;
		case 4:
			
		}	
		

	}

}
